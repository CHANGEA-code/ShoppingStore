page {
  background-color: #edece8;
}
.user_info_wrap {
  height: 45vh;
  overflow: hidden;
  position: relative;
}
.user_info_wrap .user_image_wrap {
  position: relative;
}
.user_info_wrap .user_image_wrap .user_bg {
  height: 50vh;
  filter: blur(10rpx);
}
.user_info_wrap .user_image_wrap .user_info {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 30%;
  text-align: center;
}
.user_info_wrap .user_image_wrap .user_info image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.user_info_wrap .user_image_wrap .user_info .user_name {
  font-size: 30rpx;
  color: #fff;
  margin-top: 25rpx;
}
.user_info_wrap .user_login_wrap {
  position: absolute;
  top: 30%;
  left: 50%;
  transform: translateX(-50%);
  border: 1rpx solid #2386c0;
  border-radius: 10rpx;
  padding: 20rpx;
}
.user_info_wrap .user_login_wrap .login_btn {
  font-size: 50rpx;
  color: #2386c0;
}
.user_content {
  position: relative;
}
.user_content .user_main {
  color: #666;
  position: absolute;
  top: -40rpx;
  width: 90%;
  left: 50%;
  padding-bottom: 200rpx;
  transform: translateX(-50%);
}
.user_content .user_main .history_wrap {
  background-color: #fff;
  display: flex;
  text-align: center;
  padding: 10rpx 0;
}
.user_content .user_main .history_wrap navigator {
  flex: 1;
}
.user_content .user_main .history_wrap navigator .his_number {
  color: var(--themeColor);
  font-size: 30rpx;
}
.user_content .user_main .orders_wrap {
  background-color: #fff;
  margin-top: 20rpx;
}
.user_content .user_main .orders_wrap .orders_title {
  border-bottom: 1px solid #ccc;
  padding: 20rpx;
}
.user_content .user_main .orders_wrap .orders_content {
  padding: 10rpx 0;
  display: flex;
}
.user_content .user_main .orders_wrap .orders_content navigator {
  flex: 1;
  text-align: center;
}
.user_content .user_main .orders_wrap .orders_content navigator .his_icon {
  color: var(--themeColor);
  font-size: 50rpx;
}
.user_content .user_main .address_manage {
  background-color: #fff;
  padding: 20rpx;
  margin-top: 20rpx;
}
.user_content .user_main .app_info_wrap {
  margin-top: 20rpx;
}
.user_content .user_main .app_info_wrap .app_info_item {
  background-color: #fff;
  padding: 20rpx;
}
.user_content .user_main .app_info_wrap .app_info_contact {
  display: flex;
  justify-content: space-between;
}
.user_content .user_main .recommed_wrap {
  background-color: #fff;
  padding: 20rpx;
  margin-top: 20rpx;
}
